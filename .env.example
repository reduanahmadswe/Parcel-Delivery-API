# Environment Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/parcel-delivery?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# Security Configuration  
BCRYPT_SALT_ROUNDS=12

# Frontend Configuration (Optional - for CORS)
# Add your frontend URL here. Multiple origins are hardcoded in app.ts
FRONTEND_URL=https://parcel-delivery-frontend.onrender.com

# Email Configuration (if needed)
# EMAIL_FROM=noreply@yourdomain.com
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASS=your-app-password
